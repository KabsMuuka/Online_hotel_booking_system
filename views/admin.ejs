<body>
    <h1> Bookings </h1> 
    <a href="./roomtype"> roomtype</a>

    <form action="/booking" method="POST">
        <div class="container"> 

            <div class="row"> 
                <label for="Check In Date">Check In Date</label>
                <input type="date" id="date" name="checkInDate" required>
            </div>

            <div class="row"> 
                <label for="Check Out Date">Check Out Date</label>
                <input type="date" id="date" name="checkOutDate" required>
            </div>

            <div class="row"> 
                <label for="price">Price</label>
                <input type="text" id="price" name="price" placeholder="price" required>
            </div>

            <div class="row"> 
                <label for="status">Room Status</label>
                <input type="text" id="status" name="status" placeholder="room status" required>
            </div>

            <div class="row"> 
                <label for="cusid">CustomerID</label>
                <input type="number" id="CustomerID" name="CustomerID" placeholder="CustomerID" required>
            </div>

            <div class="row"> 
                <label for="roomID">Room number</label>
                <input type="number" id="roomNumber" name="roomNumber" placeholder=" roomNumber" required>
            </div>
            <div> 
                <button type="submit">Submit</button>
            </div>
        </div>
    </form>


    <script src="/bookings.js">  </script>
</body>
